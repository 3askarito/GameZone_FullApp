@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Users";
    Pager pager = new();
    var PageNo = 0;
    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        PageNo = pager.CurrentPage;
    }
}
<h1>Users</h1>
<a class="btn btn-primary mt-2 mb-4 me-2 btn-lg" asp-action="Add">
    <i class="bi bi-plus-circle-dotted"></i>
    Add User
</a>
<div id="alert" class="alert alert-success alert-dismissible fade show mt-4 d-none" role="alert">
    User Is Deleted Successfuly!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
<table class="table table-hover table-active mt-4 user-table">
    <thead>
        <tr class="bg-primary text-white">
            @*  <th>Id</th> *@
            <th>Username</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                @*  <td>@user.Id</td> *@
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@string.Join(" , ", user.Roles.ToList())</td>
                <td class="d-flex justify-content-between">
                    <a class="btn btn-primary" asp-action="ManageRoles" asp-controller="User" asp-route-userId="@user.Id">Roles</a>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="User" asp-route-userId="@user.Id">Update</a>
                   <a class="btn btn-danger js-delete" data-id="@user.Id" href="javascript:;">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_userpager" model="@pager" />
@section Scripts {
    <script src="~/js/deleteuser.js" asp-append-version="true"></script>
}