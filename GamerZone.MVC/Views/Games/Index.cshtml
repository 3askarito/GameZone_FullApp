@model List<GameViewModel>
@{
    ViewData["Title"] = $"Games";
}
<h2>Games</h2>
<a class="btn btn-primary mt-2 mb-4 me-2 btn-lg" asp-action="Create">
    <i class="bi bi-plus-circle-dotted"></i>
    Add New Game
</a>
<a class="btn btn-primary mt-2 mb-4 btn-lg" asp-action="ManageGames">
    <i class="bi bi-pencil"></i>
    Manage Games
</a>
@if(!Model.Any())
{
    <div class="alert alert-dismissible alert-warning">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h4 class="alert-heading">Warning!</h4>
        <p class="mb-0">There is no Games!!!.</p>
    </div>
}
else
{
    <div class="row mt-4">
        @foreach (var game in Model)
        {
            <div class="col-lg-4 col-md-6">
                <a class="card border-success mb-3 text-decoration-none rounded-3 overflow-hidden" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                    <div class="card-body" style="background-image:url(@($"{FileSettings.ImagePath}/{game.Cover}"));background-position:center;background-size:cover;height:400px;">
                        <div class="d-flex align-items-end h-100">
                            <span class="badge bg-secondary rounded-0 fs-4">@game.Category</span>
                        </div>    
                    </div>
                    <div class="card-footer text-muted d-flex justify-content-between align-items-center">
                        <h4>@game.Name</h4>
                        <div>
                            @foreach (var device in game.Devices)
                            {
                                <i class="@device fs-4 ms-2"></i>
                            }
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
}